<h2>New Song</h2>

<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <h3><%= pluralize(@song.errors.size, "error") %> found:</h3>
    <ol>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ol>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br><br>

  <%= f.label :genre, "Genre (optional)" %>
  <%= f.text_field :genre %><br></br>

  <%= f.label(:released, "Released? (true/false)") %>
  <%= f.text_field :released %><br><br>
  <!-- Why doesn't this work? 
    <%#= f.radio_button(:released, "true") %>
    <%#= f.radio_button(:released, "false") %>
  -->

  <%= f.label(:release_year, "Year Released (optional if the song was never released)") %><br>
  <%= f.text_field :release_year %><br></br>

  <%= f.submit %>
<% end %>
